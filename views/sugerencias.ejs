<!-- sugerencias.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Sugerencias - EasyCalculator</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body class="main-body">

    <header class="navbar">
        <div class="logo">
            <img src="/images/logo.png" alt="EasyCalculator Logo">
            <h1>EasyCalculator</h1>
        </div>
        <nav class="nav-links">
            <a href="/paginaprincipal">Inicio</a>
            <a href="/perfil">Perfil</a>
            <a href="/historial">Historial</a>
            <a href="/sugerencias">Sugerencias</a>
            <a href="/calculadora" class="calculator-btn">Calculadora</a>
        </nav>
        <a href="/logout" class="logout-btn">Cerrar Sesión</a>
    </header>

    <section class="features">
        <div class="feature">
    <div class="container">
        <h2>Envíanos tu opinión</h2>
        <form action="/sugerencias" method="POST">
            <label for="email">Correo:</label>
            <input type="email" id="email" name="email" required>
            
            <label for="opinion">Tu opinión:</label>
            <textarea id="opinion" name="opinion" rows="4" required></textarea>

            <label>
                <input type="checkbox" name="gusta" value="Sí"> ¿Te gustó el sitio web?
            </label>

            <button type="submit">Enviar</button>
        </form>
    </div>

    <section class="comentarios">
    <h2>Comentarios anteriores</h2>
    <% if (sugerencias.length > 0) { %>
        <% sugerencias.forEach(sugerencia => { %>
            <div class="comentario">
                <p><strong><%= sugerencia.email %></strong></p>
                <p><%= sugerencia.opinion %></p>
                <p>¿Le gustó el sitio web? <%= sugerencia.gusta ? "Sí" : "No" %></p>
                <hr>
            </div>
        <% }) %>
    <% } else { %>
        <p>No hay comentarios aún.</p>
    <% } %>
</section>


</body>
</html>
